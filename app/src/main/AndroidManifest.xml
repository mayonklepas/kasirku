<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lombokapp.redpos">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />


    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/restoku"
        android:label="@string/app_name"
        android:roundIcon="@drawable/restoku"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lombokapp.redpos.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lombokapp.redpos.PersediaanActivity" />
        <activity android:name="com.lombokapp.redpos.PembelianActivity" />
        <activity android:name="com.lombokapp.redpos.PenjualanActivity" />
        <activity android:name="com.lombokapp.redpos.CatatanActivity" />
        <activity android:name="com.lombokapp.redpos.TambahPersediaanActivity" />
        <activity android:name="com.lombokapp.redpos.TambahPembelianActivity" />
        <activity android:name="com.lombokapp.redpos.CariBarangActivity" />
        <activity android:name="com.lombokapp.redpos.TambahPenjualanActivity" />
        <activity android:name="com.lombokapp.redpos.BarcodeActivity" />
        <activity android:name="com.lombokapp.redpos.CameraActivity" />
        <activity android:name="com.lombokapp.redpos.RacikActivity" />
        <activity android:name="com.lombokapp.redpos.PosBarcodeActivity" />
        <activity android:name="com.lombokapp.redpos.LaporanActivity" />
        <activity android:name="com.lombokapp.redpos.LihatLaporanActivity" />
        <activity android:name="com.lombokapp.redpos.PengaturanActivity" />
        <activity android:name="com.lombokapp.redpos.InfoUsahaActivity" />
        <activity android:name="com.lombokapp.redpos.PenggunaActivity" />
        <activity android:name="com.lombokapp.redpos.PrinterActivity" />
        <activity android:name="com.lombokapp.redpos.MainActivity" />
        <activity android:name="com.lombokapp.redpos.RegisterActivity"></activity>
    </application>

</manifest>